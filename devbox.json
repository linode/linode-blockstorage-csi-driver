{
  "packages": [
    "ginkgo@latest",
    "ctlptl@latest",
    "clusterctl@latest",
    "kustomize@latest",
    "kubectl@latest",
    "kind@latest",
    "kustomize@latest",
    "kyverno-chainsaw@latest",
    "yq-go@latest",
    "envsubst@latest",
    "mockgen@latest",
    "jq@latest",
    "openssl@latest",
    "go@1.22.5"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "local-deploy": "make local-deploy",
      "remote-cluster-deploy": "make remote-cluster-deploy",
      "e2e-test": "make e2e-test",
      "cleanup-cluster": "make cleanup-cluster",
      "csi-sanity-test": "make csi-sanity-test",
      "upstream-e2e-tests": "make upstream-e2e-tests"
    }
  },
  "env": {
    "EXP_CLUSTER_RESOURCE_SET": "true"
  }
}
